extends base

block content 
    main.main
        .card-container

            each myTour in tours
                .card
                    .card__header
                        .card__picture
                            .card__picture-overlay &nbsp;
                            img.card__picture-img(src=`/img/tours/${myTour.imageCover}`, alt=`${myTour.name}`)
                        h3.heading-tertirary
                            span= myTour.name

                    .card__details
                        h4.card__sub-heading= `${myTour.difficulty} ${myTour.duration}-day tour`
                        p.card__text= myTour.summary
                        .card__data
                            svg.card__icon
                                use(xlink:href='img/icons.svg#icon-map-pin')
                            span= myTour.startLocation.description
                        .card__data
                            svg.card__icon
                                use(xlink:href='img/icons.svg#icon-calendar')
                            span= myTour.startDates[0].toLocaleString('en-us',{month:'long',day:'numeric',year:'numeric'})
                        .card__data
                            svg.card__icon
                                use(xlink:href='img/icons.svg#icon-flag')
                            span= `${myTour.locations.length} stops`
                        .card__data
                            svg.card__icon
                                use(xlink:href='img/icons.svg#icon-user')
                            span= `${myTour.maxGroupSize}  people`

                    .card__footer
                        p
                            span.card__footer-value= `$${myTour.price}`
                            | 
                            span.card__footer-text per person
                        p.card__ratings
                            span.card__footer-value= myTour.ratingsAverage
                            | 
                            span.card__footer-text= `rating (${myTour.ratingsQuantity})`
                        a.btn.btn--green.btn--small(href=`/tour/${myTour.slug}`) Details