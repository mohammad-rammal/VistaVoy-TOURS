doctype html
html(lang="en")
    head
        block head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet' href='/css/style.css') 
        link(rel='stylesheet' href="https://fonts.googleapis.com/css?family=Lato:300,300i,700") 
        link(rel='shortcut icon' type='image/png' href='/img/favicon.png')
        title VistaVoy | #{title}
    body
        // HEADER
        include _header

        // CONTENT 
        block content 
            h1 This is a placeholder base

        // FOOTER 
        include _footer

        if typeof includeMapScript !== 'undefined' && includeMapScript
            script(src='/js/mapbox.js')

        if typeof includeLoginScript !== 'undefined' && includeLoginScript
            script(src='/js/login.js')
            script(src='https://unpkg.com/axios/dist/axios.min.js')

        if typeof includeUpdatedScript !== 'undefined' && includeUpdatedScript
            script(src='https://unpkg.com/axios/dist/axios.min.js')
            script(src='/js/account.js') 

        if typeof includeLogOutScript !== 'undefined' && includeLogOutScript
            script(src='https://unpkg.com/axios/dist/axios.min.js')
            script(src='/js/logout.js') 


